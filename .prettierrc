{
  "useTabs": false,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "tabWidth": 4
      }
    },
    {
      "files": ["*.js", "*.ts", "*.mjs", "*.cjs"],
      "options": {
        "tabWidth": 4
      }
    }
  ],
  "tailwindStylesheet": "./src/app.css"
}
